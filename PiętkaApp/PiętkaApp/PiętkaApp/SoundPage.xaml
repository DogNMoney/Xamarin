<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PiętkaApp.SoundPage">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <Label Text="Sounds Page" HorizontalTextAlignment="Center"  VerticalTextAlignment="Center" Margin="10" Grid.Column="0" Grid.Row="0"/>

            <Button Text="Hello Darkness" Margin="10" Grid.Column="0" Grid.Row="1" Pressed="PlayHelloDarkness"/>
            <Button Text="All Around Me" Margin="10" Grid.Column="0" Grid.Row="2" Pressed="PlayAllAroundMe"/>
            <Button Text="Work work" Margin="10" Grid.Column="0" Grid.Row="3" Pressed="PlayWork"/>
            <Button Text="Silent" Margin="10" Grid.Column="0" Grid.Row="4" Pressed="PlaySilentSound"/>
            <Button Text="Laugh" Margin="10" Grid.Column="0" Grid.Row="5" Pressed="PlayLaugh"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>