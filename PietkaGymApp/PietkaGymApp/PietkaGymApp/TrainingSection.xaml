<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PietkaGymApp.TrainingSection">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <Label Text="Wybierz jak chcesz przegladac progres" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="10" Grid.Column="0" Grid.Row="0"/>

            <Button Text="Przegladaj konkretne dni" Margin="10" Grid.Column="0" Grid.Row="1" Pressed="GoToTrainingDays"/>
            <Button Text="Przegladaj konkretne cwiczenia" Margin="10" Grid.Column="0" Grid.Row="1" Pressed="GoToWorkouts"/>
            <Button Text="Przegladaj swoje statystyki" Margin="10" Grid.Column="0" Grid.Row="1" Pressed="GoToPersonalStats"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>